<hr>

<p><%= @post.embed.html_safe %></p>
<br>
<p> Posted by: <%= @post.user.name %></p>

<%= @post.comments.count %> comment

<br>

<%= form_for [@post, @comment] do |f| %>
  <%= f.text_area :body %>
  <%= f.submit %>
<%end%>

<br>

<% @post.comments.each do |comment| %>
  <p><%= comment.user.name%></p>
  <p><%= comment.body %></p>
<% end %>
