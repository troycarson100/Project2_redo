<h1>All Songs</h1>

<%= link_to "Crete New User!", new_user_path%> <br>
<%= link_to "View all Users", users_path%>

<% @posts.each do |post| %>
  <h2><%= link_to post.user.name , user_path(post.user) %> <%= link_to "x", post_path(post), method: :delete%></h2>
  <p><%= post.vote %></p>
  <p><%= post.embed %></p>
  <%= post.comments.count %> comment
  <% post.comments.each do |comment| %>
    <p><%= comment.user.name%></p>
    <p><%= comment.body %></p>
  <% end %>
<% end %>
